

<!-- Login Section Begin -->
<section class="checkout spad">
    <div class="container">

        <div class="checkout__form">
            <h4 style="text-align:center; margin-bottom:30px;">Login to your account</h4>

            <form action="/login" method="POST">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-8">

                        <div class="checkout__input">
                            <p>Email <span>*</span></p>
                            <input type="email" name="email" placeholder="Enter your email" required>
                        </div>

                        <div class="checkout__input">
                            <p>Password <span>*</span></p>
                            <input type="password" name="password" placeholder="Enter password" required>
                        </div>

                        <button type="submit" class="site-btn" style="width:100%;">LOGIN</button>

                        <div class="text-center mt-3">
                            <a href="/register" style="display:block;">Register an Account</a>
                            <a href="/forgot" style="display:block;">Forgot Password?</a>

                        </div>

                    </div>
                </div>
            </form>

        </div>

    </div>
</section>
<!-- Login Section End -->
