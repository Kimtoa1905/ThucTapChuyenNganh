<div class="container mt-4">

    <h3 class="text-dark mb-4">Thống kê tổng quan</h3>

    <div class="row">

        {{!-- Tổng danh mục --}}
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-uppercase">Tổng danh mục</h6>
                            <h2 class="fw-bold">{{totalCategories}}</h2>
                        </div>

                        <div class="bg-light text-primary rounded p-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-layer-group fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Tổng sản phẩm --}}
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-uppercase">Tổng sản phẩm</h6>
                            <h2 class="fw-bold">{{totalProducts}}</h2>
                        </div>

                        <div class="bg-light text-success rounded p-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-boxes fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Đang bán --}}
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-info shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-uppercase">Sản phẩm đang bán</h6>
                            <h2 class="fw-bold">{{activeProducts}}</h2>
                        </div>

                        <div class="bg-light text-info rounded p-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-check-circle fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Sản phẩm ẩn --}}
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-danger shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-uppercase">Sản phẩm ẩn</h6>
                            <h2 class="fw-bold">{{hiddenProducts}}</h2>
                        </div>

                        <div class="bg-light text-danger rounded p-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-eye-slash fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
